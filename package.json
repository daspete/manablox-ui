{
  "name": "manablox-ui",
  "version": "0.0.1",
  "description": "UI Toolkit for manablox based on vuetify",
  "main": "lib/module.js",
  "repository": "git@github.com:daspete/manablox-ui.git",
  "author": "DasPeTe <daspetemail@gmail.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "cross-env PORT=3111 nuxt test/fixture",
    "lint": "eslint lib test",
    "test": "npm run lint && jest",
    "release": "standard-version && git push --follow-tags && npm publish"
  },
  "eslintIgnore": [
    "lib/templates/*.*"
  ],
  "files": [
    "lib"
  ],
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true
  },
  "dependencies": {
    "babel-plugin-transform-imports": "latest",
    "cross-env": "^5.1.3",
    "stylus": "latest",
    "stylus-loader": "latest",
    "vuetify": "latest"
  },
  "devDependencies": {
    "codecov": "latest",
    "eslint": "latest",
    "eslint-config-standard": "latest",
    "eslint-plugin-import": "latest",
    "eslint-plugin-jest": "latest",
    "eslint-plugin-node": "latest",
    "eslint-plugin-promise": "latest",
    "eslint-plugin-standard": "latest",
    "eslint-plugin-vue": "latest",
    "jest": "latest",
    "jsdom": "latest",
    "nuxt": "latest",
    "standard-version": "latest"
  }
}
